<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.Pane?>

<?import javafx.scene.control.Label?>
<AnchorPane fx:controller="app.controller.MainMenuController" styleClass="root" xmlns:fx="http://javafx.com/fxml">
    <VBox styleClass="optionButtonsContainer" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
      <Button text="Wczytaj dane z pliku" fx:id="fromFileButton"/>
      <Button text="Wpisz dane ręcznie" fx:id="uploadManuallyButton"/>
      <Button text="Wybierz poprzednią symulacje" fx:id="fromPastScenarioButton"/>
    </VBox>

    <Pane styleClass="startPane" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
      <Button text="Zacznij" fx:id="startButton" />
    </Pane>

    <Pane styleClass="toast" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
        <Label fx:id="toastMessage"/>
    </Pane>
</AnchorPane>

