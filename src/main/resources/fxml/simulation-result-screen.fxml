<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<AnchorPane fx:controller="app.controller.SimulationResultScreenController" fx:id="root" styleClass="root" xmlns:fx="http://javafx.com/fxml">

    <ImageView fx:id="samwiseImage" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0">
        <Image url="@../images/samwise.png"/>
    </ImageView>
    <StackPane fx:id="samwiseTextField" styleClass="textField" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <ImageView>
            <Image url="@../images/scroll.png"/>
        </ImageView>
        <Label fx:id="samwiseText"/>
    </StackPane>


    <ImageView fx:id="advisorImage" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Image url="@../images/advisor.png"/>
    </ImageView>
    <StackPane fx:id="advisorTextField" styleClass="textField" AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="20">
        <ImageView>
            <Image url="@../images/scroll.png"/>
        </ImageView>
        <Label fx:id="advisorText"/>
    </StackPane>

    <Pane styleClass="toast" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0">
        <Label fx:id="toastMessage"/>
    </Pane>

</AnchorPane>

